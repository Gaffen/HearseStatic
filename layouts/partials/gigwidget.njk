<div class="calendar__outer">
  <div class="gridwrap">
    <div class="col col--1">
      <p class="calendar__next">NEXT SHOW:
        {% if calendar.events | length > 0 %}
          {{ calendar.events[0].date_start | asGigDate }} - {{ calendar.events[0].title }}
        {% else %}
          No events in calendar
        {% endif %}
      </p>
    </div>
  </div>
  {% if calendar.events | length > 0 %}
    <div class="gigcarousel">
      {% for event in calendar.events %}
        <div class="gigcarousel__item gridwrap gridwrap--flex">
          <div class="col col--1-3">
            <h4 class="">{{ event.date_start | asGigDate }}</h4>
          </div>
          <div class="col col--2-3">
            <h3><a target="_blank" href="{{ event.event_link }}">{{ event.title }}</a></h3>
          </div>
          <div class="col col--1-3">
            <p class="gigcarousel__location"><a target="_blank" href="{{ event.location.coordinates | osmLink }}">{{ event.location_short }}</a></p>
            {% if event.entry_fee %}
              <p class="gigcarousel__fee"> Entry fee: {{ event.entry_fee }}</p>
            {% endif %}
          </div>
          <div class="col col--2-3 gigcarousel__info">
            {{ (event.description or '') | markdown | safe }}
          </div>
          <p class="col col--1 gigcarousel__more">
            <a href="#" data-item-index="{{loop.index0}}">MORE INFO</a>
          </p>
        </div>
      {% endfor %}
    </div>
  {% endif %}
  {}
</div>